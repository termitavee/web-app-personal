{
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build:android": "expo build:android",
    "build:ios": "expo build:ios",
    "build:web": "expo build:web",
    "deploy": "expo build:web && firebase deploy",
    "lint": "eslint \"src/**/*.ts\" \"src/**/*.tsx\"",
    "format": "prettier-eslint fix --write --eslint-config-path ./.eslintrc \"$PWD/src/**/*.ts\" \"$PWD/src/**/*.tsx\"",
    "format-soft": "prettier-eslint check --eslint-config-path  $PWD/.eslintrc --list-different \"$PWD/src/**/*.ts\" \"$PWD/src/**/*.tsx\"",
    "prepare-commit": "yarn format && yarn lint",
    "test-output": "open coverage/lcov-report/index.html",
    "test-and-output": "yarn test && yarn test-output",
    "deploy:web": "expo build:web && firebase deploy",
    "eject": "expo eject"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "~1.15.0",
    "@react-native-clipboard/clipboard": "^1.9.0",
    "@react-navigation/material-bottom-tabs": "^6.0.8",
    "@react-navigation/native": "^6.0.5",
    "expo": "~42.0.4",
    "expo-localization": "~10.2.0",
    "i18next": "^21.2.6",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-i18next": "^11.12.0",
    "react-native": "https://github.com/expo/react-native/archive/sdk-42.0.0.tar.gz",
    "react-native-paper": "^4.9.2",
    "react-native-safe-area-context": "^3.3.2",
    "react-native-screens": "^3.8.0",
    "react-native-toast-notifications": "^3.2.2",
    "react-native-vector-icons": "^8.1.0",
    "react-native-web": "^0.17.5"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.3",
    "@types/react": "^17.0.27",
    "@types/react-native": "^0.65.5",
    "@types/react-native-snap-carousel": "^3.8.4",
    "@types/react-test-renderer": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^25.0.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.2",
    "jest": "^27.2.5",
    "prettier-eslint-cli": "^5.0.1",
    "typescript": "^4.4.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": ""
    }
  },
  "private": true
}
