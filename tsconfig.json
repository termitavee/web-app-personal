{
  "compilerOptions": {
    "jsx": "react-native",
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "incremental": false,
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "src": ["./src"],
      "/": ["./"]
    },
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  },
  "extends": "expo/tsconfig.base"
}
